<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Splash" >

    <RelativeLayout
        android:id="@+id/relativeTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" >

        <TextView
            android:id="@+id/txtInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#FFFF00"
            android:gravity="center"
            android:text="@string/txtInforme" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeTexto"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <ImageButton
                android:id="@+id/container_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:background="#0000FF"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_above="@+id/r7"
            android:layout_below="@+id/r1" >

            <ImageButton
                android:id="@+id/container_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:background="#FF0000"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:layout_above="@+id/r7"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/r4" >

            <ImageButton
                android:id="@+id/container_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:background="#00B2EE"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/r2"
            android:layout_toLeftOf="@+id/r3"
            android:layout_toRightOf="@+id/r2" >

            <ImageButton
                android:id="@+id/container_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:background="#FFFF00"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/r4"
            android:layout_alignRight="@+id/r4"
            android:layout_below="@+id/r4" >

            <ImageButton
                android:id="@+id/container_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:background="#FF00FF"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r7"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/r2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

            <ImageButton
                android:id="@+id/container_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="#7D26CD"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/r3"
            android:layout_alignLeft="@+id/r5"
            android:layout_below="@+id/r5"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/r3" >

            <ImageButton
                android:id="@+id/container_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:background="#00FF00"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/tairo/workspace_AndroidStudio/TrabalhoDeConclusaoDeCurso/app/src/main/res/layout/principal.xml -->